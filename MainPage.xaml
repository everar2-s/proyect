<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalcuNotifyChange.MainPage">

    <ScrollView>
        <VerticalStackLayout
    Padding="30,0"
    Spacing="25"
    VerticalOptions="Center">

            <Entry Placeholder="Número 1" Text="{Binding Num1}" />
            <Entry Placeholder="Número 2" Text="{Binding Num2}" />
            <Entry Placeholder="Resultado" Text="{Binding Result}" />
            <Button Command="{Binding SumarCommand}" HorizontalOptions="Center" Text="Sumar" />
            
        </VerticalStackLayout>


    </ScrollView>

</ContentPage>
